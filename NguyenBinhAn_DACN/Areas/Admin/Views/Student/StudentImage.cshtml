    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header bg-secondary" style="color:white;">
        Total: <span id="ImageCount">@ViewBag.ImageList.Count</span> images
    </div>
    <div class="card-body">
        <div class="row" style="margin:0px;">
        @{
            int i = 1;
            @foreach(var image in ViewBag.ImageList as List<StudentImage>)
                {
                string id = "img" + i;
                <div class="card" id="@id">
                    <div class="card-body">
                     <img src="~/images/StudentImages/@image.Path" style="width:100px;height:100px;"  />
                
                         <input type="submit" class="btnDelete" value="X" onclick="DeleteImage('@image.Path','@id')">
                    </div>
                </div>
                i = @i+1;
            }
            
        }
        </div>
    </div>
</div>