@model NguyenBinhAn_DACN.Areas.Admin.Models.StudentModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control readonly" value="@Model.StudentId" readonly/>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="row">
                 <div class="col-md-4">
                    <div class="form-group">
                    <label asp-for="Class" class="control-label"></label>
                    <select  asp-for="ClassId" class="form-control" asp-items="@(new SelectList(ViewBag.ClassList,"Value","Text",Model.ClassId))"></select>
                    <span asp-validation-for="Class" class="text-danger"></span>
                     </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select  asp-for="Gender" class="form-control" asp-items="@(new SelectList(ViewBag.GenderList,"Value","Text",Model.Gender))"></select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                     </div>
                </div>
                
                <div class="col-md-4">
                    <div class="form-group">
                    <label asp-for="Department" class="control-label"></label>
                    <select  asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.DepartmentList,"Value","Text"))"></select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                     </div>
                </div>

             </div>
            
            
            <label asp-for="Address" class="control-label"></label>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <select id="ddlProvince" class="form-control" asp-items="@(new SelectList(ViewBag.ProvinceList,"Value","Text",Model.ProvinceId))">
                            
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <select id="ddlDistrict" class="form-control" asp-items="@(new SelectList(ViewBag.DistrictList,"Value","Text",Model.DistrictId))">
                            
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <select asp-for="WardId" id="ddlWard" class="form-control" asp-items="@(new SelectList(ViewBag.WardList,"Value","Text",Model.WardId))">
                            
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="Address" class="form-control" placeholder="-Enter street address-"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BirthDay" class="control-label"></label>
                <input asp-for="BirthDay" class="form-control" value="@Model.BirthDayString" type="date"/>
                <span asp-validation-for="BirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentityCardNumber" class="control-label"></label>
                <input asp-for="IdentityCardNumber" class="form-control" />
                <span asp-validation-for="IdentityCardNumber" class="text-danger"></span>
            </div>
            <a asp-action="Index" class="btn btn-danger">Cancel</a>
           <input type="submit" value="Submit" class="btn btn-primary" style="float:right;" />
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
